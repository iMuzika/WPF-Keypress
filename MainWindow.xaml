<Window x:Class="MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Keypress"
        mc:Ignorable="d"
        Title="WPF Keypress" Height="150" Width="300">
    <Grid Margin="10">
        <StackPanel Orientation="Horizontal">
            <StackPanel Orientation="Vertical">
                <Label Content="A-Z"/>
                <Label Content="a-z"/>
                <Label Content="0-9, +-"/>
            </StackPanel>
            <StackPanel Orientation="Vertical" Width="200">
                <TextBox Height="20" FontSize="12" Margin="3" PreviewTextInput="UpperCaseAlphabet"/>
                <TextBox Height="20" FontSize="12" Margin="3" PreviewTextInput="LowerCaseAlphabet"/>
                <TextBox Height="20" FontSize="12" Margin="3" PreviewTextInput="NumberHypenPlus"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
